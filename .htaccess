<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule ^\.htaccess$ - [F]

#------------
#Deletes the last /
#------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ $1 [L]

#------------
# 1: page
# 2: variable
# 3: value
#------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/(.*)/(.*)$ $1.php?$2=$3 [L]





</IfModule>